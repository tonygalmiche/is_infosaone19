<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- Template Contact pour InfoSaône -->
<record id="contactus" model="ir.ui.view">
    <field name="name">Contact Us</field>
    <field name="type">qweb</field>
    <field name="key">is_infosaone19.contactus</field>
    <field name="arch" type="xml">
        <t name="Contact Us" t-name="is_infosaone19.contactus">
            <t t-call="website.layout">
                <div id="wrap">
                    <div class="oe_structure">
                        <section class="s_cover parallax s_parallax_is_fixed bg-black-50 s_parallax_no_overflow_hidden pt24 pb24" data-scroll-background-ratio="1" data-name="Cover" style="background-image: none;">
                            <span class="s_parallax_bg oe_img_bg oe_custom_bg" style="background-image: url('/web/image/website.s_cover_default_image'); background-position: 50% 0;"/>
                            <div class="container">
                                <div class="row s_nb_column_fixed">
                                    <div class="col-lg-12 s_title" data-name="Title">
                                        <h1 class="s_title_thin" style="font-size: 62px; text-align: center;">Contactez-nous</h1>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                    <div class="container mt-2">
                        <div class="row">
                            <div class="col-lg-2"/>
                            <div class="col-lg-8">
                                <div class="oe_structure">
                                    <section class="s_text_block">
                                        <div class="container">
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <p>
                                                        Contactez-nous pour toutes questions relatives à notre société ou nos services.<br/>
                                                        Nous ferons notre possible pour revenir vers vous au plus vite.
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </section>
                                </div>
                                
                                <!-- Formulaire de contact -->
                                <section class="s_website_form pt16 pb16" data-vcss="001" data-snippet="s_website_form">
                                    <form action="/website/form/" method="post" enctype="multipart/form-data" class="o_mark_required" data-mark="*" data-model_name="mail.mail" data-success-mode="redirect" data-success-page="/merci">
                                        <div class="s_website_form_rows row s_col_no_bgcolor">
                                            <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_dnone">
                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                                    <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px">
                                                        <span class="s_website_form_label_content"/>
                                                    </label>
                                                    <div class="col-sm">
                                                        <input type="hidden" class="form-control s_website_form_input" name="email_to" t-att-value="res_company.email"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_custom s_website_form_required" data-type="char">
                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                                    <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="name">
                                                        <span class="s_website_form_label_content">Votre nom</span>
                                                        <span class="s_website_form_mark"> *</span>
                                                    </label>
                                                    <div class="col-sm">
                                                        <input class="form-control s_website_form_input" type="text" name="name" required="1" id="name"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_model_required" data-type="email">
                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                                    <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="email_from">
                                                        <span class="s_website_form_label_content">Email</span>
                                                        <span class="s_website_form_mark"> *</span>
                                                    </label>
                                                    <div class="col-sm">
                                                        <input class="form-control s_website_form_input" type="email" name="email_from" required="1" id="email_from"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_custom" data-type="tel">
                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                                    <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="phone">
                                                        <span class="s_website_form_label_content">Téléphone</span>
                                                    </label>
                                                    <div class="col-sm">
                                                        <input class="form-control s_website_form_input" type="tel" name="phone" id="phone"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_model_required" data-type="char">
                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                                    <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="subject">
                                                        <span class="s_website_form_label_content">Sujet</span>
                                                        <span class="s_website_form_mark"> *</span>
                                                    </label>
                                                    <div class="col-sm">
                                                        <input class="form-control s_website_form_input" type="text" name="subject" required="1" id="subject"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <div data-name="Field" class="s_website_form_field mb-3 col-12 s_website_form_custom s_website_form_required" data-type="text">
                                                <div class="row s_col_no_resize s_col_no_bgcolor">
                                                    <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="body_html">
                                                        <span class="s_website_form_label_content">Message</span>
                                                        <span class="s_website_form_mark"> *</span>
                                                    </label>
                                                    <div class="col-sm">
                                                        <textarea class="form-control s_website_form_input" name="body_html" required="1" id="body_html" rows="5"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="mb-0 py-2 col-12 s_website_form_submit text-end" data-name="Submit Button">
                                                <div style="width: 200px;" class="s_website_form_label"/>
                                                <span id="s_website_form_result"/>
                                                <a href="#" role="button" class="btn btn-primary s_website_form_send">Envoyer</a>
                                            </div>
                                        </div>
                                    </form>
                                </section>
                            </div>
                            <!-- <div class="col-lg-4">
                                <address itemscope="itemscope" itemtype="http://schema.org/Organization">
                                    <div t-field="res_company.partner_id" t-options='{"widget": "contact", "fields": ["name", "address", "phone", "mobile", "email"]}'/>
                                    <t t-if="not res_company.google_map_img()">
                                        <span class="fa fa-map-marker fa-fw mt16" role="img" aria-label="Address" title="Address"/>
                                        <a t-att-href="res_company.google_map_link()" target="_BLANK"> Google Maps</a>
                                    </t>
                                </address>
                                <t t-if="res_company.google_map_img()">
                                    <a t-att-href="res_company.google_map_link()" target="_BLANK">
                                        <img class="img-fluid" t-att-src="res_company.google_map_img()" alt="Google Maps"/>
                                    </a>
                                </t>
                            </div> -->
                        </div>
                    </div>
                    <div class="oe_structure mt-2 oe_empty"/>
                </div>
            </t>
        </t>
    </field>
</record>

<!-- Créer la page associée -->
<record id="nous_contacter" model="website.page">
    <field name="name">Nous contacter</field>
    <field name="url">/nous_contacter</field>
    <field name="view_id" ref="contactus"/>
    <field name="is_published">True</field>
    <field name="website_indexed">True</field>
</record>

<!-- Menu pour Nous contacter -->
<record id="menu_nous_contacter" model="website.menu">
    <field name="name">Nous contacter</field>
    <field name="url">/nous_contacter</field>
    <field name="page_id" ref="nous_contacter"/>
    <field name="parent_id" ref="website.main_menu"/>
    <field name="sequence" type="int">50</field>
</record>

<!-- Template page de remerciement -->
<record id="merci" model="ir.ui.view">
    <field name="name">Merci</field>
    <field name="type">qweb</field>
    <field name="key">is_infosaone19.merci</field>
    <field name="arch" type="xml">
        <t name="Merci" t-name="is_infosaone19.merci">
            <t t-call="website.layout">
                <div id="wrap">
                    <div class="oe_structure">
                        <section class="s_cover parallax s_parallax_is_fixed bg-black-50 s_parallax_no_overflow_hidden pt24 pb24" data-scroll-background-ratio="1" data-name="Cover" style="background-image: none;">
                            <span class="s_parallax_bg oe_img_bg oe_custom_bg" style="background-image: url('/web/image/website.s_cover_default_image'); background-position: 50% 0;"/>
                            <div class="container">
                                <div class="row s_nb_column_fixed">
                                    <div class="col-lg-12 s_title" data-name="Title">
                                        <h1 class="s_title_thin" style="font-size: 62px; text-align: center;">Merci !</h1>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                    <div class="container mt-5 mb-5">
                        <div class="row">
                            <div class="col-lg-2"/>
                            <div class="col-lg-8 text-center">
                                <div class="s_text_block py-5">
                                    <i class="fa fa-check-circle text-success" style="font-size: 80px;"/>
                                    <h2 class="mt-4">Votre message a bien été envoyé !</h2>
                                    <p class="lead mt-3">
                                        Nous vous remercions de nous avoir contacté.<br/>
                                        Nous reviendrons vers vous dans les meilleurs délais.
                                    </p>
                                    <a href="/" class="btn btn-primary mt-4">
                                        <i class="fa fa-home me-2"/>Retour à l'accueil
                                    </a>
                                </div>
                            </div>
                            <div class="col-lg-2"/>
                        </div>
                    </div>
                    <div class="oe_structure mt-2 oe_empty"/>
                </div>
            </t>
        </t>
    </field>
</record>

<!-- Page de remerciement -->
<record id="page_merci" model="website.page">
    <field name="name">Merci</field>
    <field name="url">/merci</field>
    <field name="view_id" ref="merci"/>
    <field name="is_published">True</field>
    <field name="website_indexed">False</field>
</record>

</odoo>
